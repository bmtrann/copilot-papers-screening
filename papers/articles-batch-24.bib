@article{rayyan-384038148,
  title={A case study on implementing a flexible {IIoT} service framework for the integration of machine tools},
  year={2025},
  journal={Journal of Industrial Information Integration},
  volume={47},
  author={Chen, Wenching and Ji, Bo Yu and Chen, Hunghsiang},
  url={https://www.scopus.com/inward/record.uri?eid=2-s2.0-105010202262&doi=10.1016%2Fj.jii.2025.100908&partnerID=40&md5=4fdeadc3d79de6e54a5a90366efd4f98},
  keywords={Microservice, Computer architecture, Data communication systems, Data integration, Electronic data interchange, Gateways (computer networks), Industrial internet of thing, Information services, Information systems, Information use, Integration, Machine tools, Message queuing telemetry transport, Modbus, OPC UA, Operational technologies, Operational technology/information technology convergence, Programmable logic controllers, Programmed control systems, Service framework, Technology convergence, Web services, Webhook},
  abstract={This paper presents the IIoT (Industrial Internet of Things) Gateway, an intermediary service framework designed to address the core challenges of industrial information integration. By creating a seamless bridge between OT (Operational Technology) systems and modern IT (Information Technology) infrastructures, our work provides a practical solution that directly contributes to the field of industrial information integration. The framework simplifies the integration process for information service providers by facilitating seamless communication and data exchange between diverse PLC (Programmable Logic Controller) devices and enterprise information systems. It achieves this by leveraging a combination of Operational Technology (OT) protocols, such as OPC UA (Open Platform Communications Unified Architecture) and Modbus, and Information Technology (IT) standards, including MQTT (Message Queuing Telemetry Transport) and JSON (JavaScript Object Notation). The proposed IIoT Gateway enables application engineers to utilize standardized protocols and JSON for control commands, data exchange, and real-time monitoring via webhook technology, significantly reducing development complexity and project timelines. The framework was initially implemented using a monolithic architecture and later refactored into a microservice-based architecture, leveraging Spring Cloud and Nacos to enhance scalability and flexibility. The IIoT Gateway has been successfully integrated and validated in a real-world industrial environment at Everising Machine Co., demonstrating high availability and stability. This work provides a practical blueprint for OT/IT convergence, with future research directions focused on visualized data mapping, AI-enabled automation, enhanced cybersecurity and performance optimization. © 2025 Elsevier B.V., All rights reserved.},
  note={Type: Article},
  doi={10.1016/j.jii.2025.100908},
  chapter={0}
}

@article{rayyan-384038149,
  title={An extensible lightweight framework for distributed telemetry of microservices},
  year={2025},
  journal={Sustainable Computing: Informatics and Systems},
  volume={46},
  author={Otero, Manuel and García, José María and Fernandez, Pablo},
  url={https://www.scopus.com/inward/record.uri?eid=2-s2.0-85219233178&doi=10.1016%2Fj.suscom.2025.101100&partnerID=40&md5=22755386e4c64d274efcceb7d1df85e1},
  keywords={Microservice, API, Carbon footprint, Centralised, Cloud platforms, Complex applications, Distributed systems, Lightweight frameworks, Model-based OPC, OpenAPI specification, Performance and reliabilities, Resource usage, Telemetering, Telemetering equipment, Telemetering systems},
  abstract={Microservice architectures have become the standard for developing scalable distributed systems that offer significant benefits in managing the integration and evolution of complex applications. However, they face challenges in effectively diagnosing and resolving performance and reliability issues. Traditional centralized telemetry models and cloud-based monitoring platforms often require complex or costly configurations and are not optimized for RESTful microservices. In fact, although the OpenAPI Specification (OAS) has become a key standard for describing microservice APIs, existing telemetry tools do not leverage this information to enhance service analysis and diagnostics. This paper introduces a lightweight and distributed approach to telemetry that uses OAS-based API information, offering an automated, configuration-free system that enables developers and operations teams to perform root cause analysis more efficiently. Moreover, we propose a plugin system to incorporate intelligent behavior into the telemetry system, such as an adaptive proactive alert mechanism when response-time anomalies are detected. By incorporating this extensibility mechanism, the framework paves the way to address issues such as energy consumption and performance, allowing the system to dynamically adjust its monitoring activities to optimize resource usage and minimize the carbon footprint of microservice deployment and execution. This adaptability reduces operational overhead and supports sustainable computing practices. To validate our approach, we present a proof-of-concept in the form of a ready-to-use package for the NodeJS ecosystem, demonstrating that this distributed telemetry model can operate with minimal impact on system performance and resource usage, proving its effectiveness to support more robust and sustainable IT systems. © 2025 Elsevier B.V., All rights reserved.},
  note={Type: Article},
  doi={10.1016/j.suscom.2025.101100},
  chapter={0}
}

@article{rayyan-384038150,
  title={{RCAEval}: {A} {Benchmark} for {Root} {Cause} {Analysis} of {Microservice} {Systems} with {Telemetry} {Data}},
  year={2025},
  pages={777 -- 780},
  author={Pham, Luan and Zhang, Hongyu and Ha, Huong and Salim, Flora Dilys and Zhang, Xiuzhen},
  url={https://www.scopus.com/inward/record.uri?eid=2-s2.0-105009234039&doi=10.1145%2F3701716.3715290&partnerID=40&md5=321ba15deaa52b161e81f61f8dac99a5},
  keywords={Microservice, Open systems, Telemetering, Telemetering equipment, Benchmark, Benchmarking, Comprehensive evaluation, Evaluation framework, Fault types, Human engineering, Large datasets, Large-scale datasets, Open-source, Real-world, Root cause analysis, Telemetry data},
  abstract={Root cause analysis (RCA) for microservice systems has gained significant attention in recent years. However, there is still no standard benchmark that includes large-scale datasets and supports comprehensive evaluation environments. In this paper, we introduce RCAEval, an open-source benchmark that provides datasets and an evaluation environment for RCA in microservice systems. First, we introduce three comprehensive datasets comprising 735 failure cases collected from three microservice systems, covering various fault types observed in real-world failures. Second, we present a comprehensive evaluation framework that includes fifteen reproducible baselines covering a wide range of RCA approaches, with the ability to evaluate both coarse-grained and fine-grained RCA. We hope that this ready-to-use benchmark will enable researchers and practitioners to conduct extensive analysis and pave the way for robust new solutions for RCA of microservice systems. © 2025 Elsevier B.V., All rights reserved.},
  note={Type: Conference paper},
  doi={10.1145/3701716.3715290},
  chapter={0}
}

@article{rayyan-384038156,
  title={Navigating an {E}\&{P} {Operator}'s {Journey} to {Cloud}-{Planning}, {Execution}, {Challenges} and {Impact}},
  year={2025},
  author={Rehman, Atiq Ur and Fogat, Mrigya and Aika, Mohd},
  url={https://www.scopus.com/inward/record.uri?eid=2-s2.0-86000025247&doi=10.2523%2FIPTC-25046-MS&partnerID=40&md5=cbe3ba18aad7441c1c5a18cf4558f3f9},
  keywords={Performance, Acceptance tests, Asphaltenes, Budget control, Business-users, Cloud technologies, Costs, Decision making, Digital transformation, Efficiency, Empowerment of personnel, Financial markets, Formal concept analysis, Gas oils, Gasoline, Halliburton, Investments, Liquefied petroleum gas, Mineral oils, Oil shale, Operational efficiencies, Petabytes, Petroleum reservoir evaluation, Petroleum tar, Pipeline bends, Production drilling, Project execution, Project management, Quality of service, Reservoir engineering, SGML, Six sigma, Taxation},
  abstract={Objective/Scope: Halliburton carried out a huge project to support a major E\&P Operator migrate to cloud involving the migration of dozens of petrotechnical applications, serving more than hundred end business users across a diverse array of operations like GG, Reservoir Engineering, Production, Drilling Completions, etc. collaborating numerous application vendors, handling data in Petabytes and high computing capacity. The objective of this paper is to discuss the process involved in the execution of this project, its impact, and groundbreaking advancements in the digital transformation of this major EP operator supported by Halliburton for almost a decade. Methods, Procedures, Process: Considering Halliburton's development and innovation in cloud technologies and cloud native applications and plat-forms, a large E\&P operator collaborated with Halliburton to navigate their journey to cloud. The entire project can be divided in the following phases: • Defining Scope of Work-Preceding project execution, a meticulous assessment of business needs and objectives was conducted, leveraging vendor-agnostic technologies and a comprehensive future roadmap to ensure adoptability and scalability of the solution. Emphasizing reliability and support, along with domain expertise, pilot testing, risk assessment and mitigation strategies are formulated. • Contract Formulation-Contracts, commercial agreements, and Service level Agreements are established, alongside the formation of a Steering Committee and Project Team. Responsibilities, assumptions, pre-requisites, and success criteria is clearly defined to meet the objective in a timely manner. • Project Execution-Meticulous hardware deployment, infrastructure configuration, and petrotechnical application deployment are orchestrated, coupled with seamless user profile data migration. Factory testing, user acceptance testing, stress testing, and final go-live procedures culminate the process, ensuring robust and efficient system implementation. Results, Observations, and Conclusions: This technical solution has been instrumental in delivering heightened business agility. The deployment of the solution has enhanced efficiency and user experience of Geology Geophysics (GG) solutions spanning from basin to reservoir powered by underlying seamless cloud technology and an open architecture data management. By integrating cloud computing and digital technologies, the initiative allowed to elevate success rates, resource monetization, and operational efficiency. The cloud platform facilitates collaboration in various national operations, ensuring data synchronization and centralized interpretation platforms that accelerate decision-making. The migration to cloud native applications and data storage and management marks the transition to advanced E\&P petrotechnical applications in terms of performance, security, collaboration, and scalability. By enabling rapid completion of reservoir simulations, seismic processing and interpretation bolstering data security with rigorous protocols, fostering seamless collaboration, and offering scalable solutions, it has elevated operational efficiency, confidentiality, collaboration, and adaptability, thus driving transformative impacts across the entire petroleum sector. This solution facilitated faster performance, reduction in total cost of ownership and faster deployment than a client server traditional infrastructure. Novel/Additive Information: This study showcases how large EP operators, managing petabytes of data, hundreds of applications, and a large number of users in different parts of the globe, can navigate their journey to cloud while following best practices, having seamless business continuity and minimum-security exposure during the journey to cloud in the era of digital transformation. This paper also quantifies resource, cost, and performance optimization. Lastly, this paper address critical topics of security, costs, disaster recovery, company policies for critical EP Data and operations and the impact of digital transformation on the same. © 2025 Elsevier B.V., All rights reserved.},
  note={Type: Conference paper},
  doi={10.2523/IPTC-25046-MS},
  chapter={0}
}

@article{rayyan-384038160,
  title={Efficient {Microservice} {Monitoring} {Via} {Kernel} {Transformation} and {FFT} {Forecasting} - {IEEE} {International} {Conference} on {Cloud} {Computing}, {CLOUD}},
  year={2025},
  pages={288 -- 295},
  author={Ojanen, Marianna and Sabzevari, Maryam and Szedmák, Sándor},
  url={https://www.scopus.com/inward/record.uri?eid=2-s2.0-105015991127&doi=10.1109%2FCLOUD67622.2025.00037&partnerID=40&md5=47fb209d7774a0bc00af415ef495c260},
  keywords={Microservice, Edge computing, Network architecture, Change point detection, Computational efficiency, Data transfer, Distributed monitoring, Edge detection, Fast fourier, Fast Fourier transforms, Forecasting, Fourier series, High velocity, Kernel learning, Maximum margin, Memory architecture, One dimensional, Resource allocation, System reliability, Time series, Time-series data},
  abstract={Change point detection (CPD) is crucial for identifying abrupt shifts in time series data across various domains. In microservice architectures, where components operate at high velocity and scale, monitoring efficiency becomes particularly critical for maintaining system reliability while minimizing over-head. Efficient change point detection allows for timely root cause analysis, dynamic resource allocation, and targeted instance restarts, interventions that can prevent cascading failures across interconnected services. This paper presents a novel approach called MMR-FFT CPD that transforms high-dimensional mi-croservice telemetry data into a one-dimensional kernel-based representation through Maximum Margin Regression (MMR). The resulting 1D time series is then processed using Fast Fourier Transform (FFT) for efficient temporal pattern forecasting, which enables prediction of expected future values. By computing the correlation between these FFT-based predictions and the actual observed values, our method can identify deviations that indicate potential change points in microservice behavior. By tracking only these compact representations rather than raw metrics, our method dramatically reduces computational overhead and network traffic in distributed monitoring scenarios. We evaluated MMR-FFT CPD against multiple state-of-the-art algorithms. Our experiments demonstrate that with a 1D data transfer to the monitoring entity, we can maintain competitive detection accuracy, which is advantageous, particularly for high-dimensional data streams typical in modern distributed systems. The results provide valuable insights for implementing efficient, low-overhead monitoring in microservice environments with varying computational and network constraints, enabling more resnonsive and resilient microservice architectures. © 2025 Elsevier B.V., All rights reserved.},
  note={Type: Conference paper},
  doi={10.1109/CLOUD67622.2025.00037},
  booktitle={{IEEE} {International} {Conference} on {Cloud} {Computing}, {CLOUD}},
  chapter={0}
}

@article{rayyan-384038166,
  title={Cloud native engineering: {A} comprehensive review of principles, practices, and challenges},
  year={2025},
  journal={Advances in Computers},
  author={Brojabasi, Subhajit and Paul, Subrata and Mitra, Anirban},
  url={https://www.scopus.com/inward/record.uri?eid=2-s2.0-105010332998&doi=10.1016%2Fbs.adcom.2025.06.013&partnerID=40&md5=7926e8f9900252baad94110b806beeaa},
  abstract={The innovative technique known as “cloud native engineering” has revolutionized the art and science of modern software development by redesigning the architecture, development, and deployment of software to maximize the advantages of cloud computing. Based on insights gleaned from published studies, industry practices, and empirical findings, the current review paper provides an inclusive assessment of the fundamental concepts, required methods, and inherent challenges that come with cloud native engineering. We look at popular architectural patterns such as serverless computing, microservices, and service mesh, as well as automation strategies enabled by infrastructure as code (IaC), container orchestration, and continuous integration and deployment (CI/CD). We also go over operational procedures that enhance cloud native environments’ scalability, robustness, and efficiency. Strong solutions are required to handle compliance, threat detection, and system stability as security, monitoring, and observability become crucial factors. The use of AI and machine learning to enhance cloud operations, as well as performance optimization techniques, are also covered in the article. Finally, we discuss future trends including edge computing, multi-cloud methods, and green cloud practices, outlining key areas of research that will shape cloud native engineering in the future. © 2025 Elsevier B.V., All rights reserved.},
  note={Type: Article},
  doi={10.1016/bs.adcom.2025.06.013},
  chapter={0}
}

@article{rayyan-384038173,
  title={An {Open} {Interconnection} {System} for {Computing} {Power} {Based} on {Service} {Mesh}},
