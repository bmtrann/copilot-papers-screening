  abstract={This paper proposes a heterogeneous multi-objective secure billing method based on microservices gateway domain to address the data security issues in transaction security billing mechanisms in the financial and pan financial industries. The monitoring module of Service Mesh is integrated, adapted to the monitoring business system, and the semantic parameters of Service Mesh are flexibly configured. In the data flow preprocessing stage, a custom encryption module is used to encrypt and preset user attributes. At the same time, business indicators are defined, a multi-objective model is constructed, algorithm logic is reconstructed, and the delay and traffic of the entire link are optimized. Furthermore, real-time security quantification standards based on time-series monitoring and multithreading are further implemented.},
  doi={10.1109/ICEICT61637.2024.10670752},
  booktitle={2024 IEEE 7th International Conference on Electronic Information and Communication Technology (ICEICT)},
  chapter={0}
}

@article{rayyan-384038136,
  title={Deploying the observability of the SigSaude system using service mesh - 2020 20th International Conference on Computational Science and Its Applications (ICCSA)},
