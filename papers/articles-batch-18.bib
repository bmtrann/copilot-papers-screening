@article{rayyan-384038102,
  title={Architectural Trade-off Analysis of Modern Service Mesh Designs: A Qualitative ATAM Study - 2025 2nd International Conference on Computational Intelligence, Communication Technology and Networking (CICTN)},
  year={2025},
  month={2},
  pages={873-880},
  author={Josyula, Prashanth and Kumar, Anant},
  keywords={Systematics;Sensitivity;Standards organizations;Microservice architectures;Computer architecture;...},
  abstract={Modern cloud native applications are highly dependent on service mesh designs, which provide solutions for communication, security, and observability. Architectural decisions for service mesh implementations involve numerous trade-offs that affect system quality. This study analyzes three popular service mesh architectures: Istio, Linkerd, and Consul Connect, using the Architecture Tradeoff Analysis Method (ATAM), we created a utility tree that considers essential quality attributes such as security, maintenance, reliability, and operability. Our analysis identifies important areas of sensitivity where architectural changes have a significant impact on quality attributes, as well as trade-off points where increasing one attribute affects others. Our research identifies common trends in how service mesh designs handle opposing requirements, including proxy deployment, control plane distribution, and configuration management approaches. Our analysis shows that, while all systems prioritize security and observability, they differ dramatically in how they handle the complexity-flexibility trade-off. This analysis offers a systematic approach for software architects to evaluate service mesh designs and understand their trade-offs, leading to better architectural decisions in microservices environments.},
  doi={10.1109/CICTN64563.2025.10932541},
  booktitle={2025 2nd International Conference on Computational Intelligence, Communication Technology and Networking (CICTN)},
  chapter={0}
}

@article{rayyan-384038103,
  title={Containerized Application for IoT Devices: Comparison between balenaCloud and Amazon Web Services Approaches - 2020 International Symposium on Electronics and Telecommunications (ISETC)},
  year={2020},
  month={11},
  issn={2475-7861},
  pages={1-4},
  author={Botez, Robert and Strautiu, Vlad and Ivanciu, Iustin-Alexandru and Dobrota, Virgil},
  keywords={Internet of Things;Containers;Cloud computing;Web services;Monitoring;Databases;Servers;Amazon We...},
  abstract={Depending on the requirements, the deployment of containerized applications for monitoring Internet of Things devices can be done in Cloud or on the Edge. This paper discusses the design of a containerized application monitoring temperature and humidity for IoT devices in three implementations: (1) balenaCloud for edge deployment; (2) Amazon Web Services cloud with EC2 instances; and (3) dedicated Amazon Web Services IoT service. The experiments showed that there are no significant performance differences between Edge and Cloud deployments regarding the resource consumption. However, for fast and almost effortless action, Amazon Web Services IoT is the go-to option when it comes to serverless applications based on Message Queuing Telemetry Transport. For all-in-one automated fleet management balenaCloud seems to be a good tool for IoT developers.},
  doi={10.1109/ISETC50328.2020.9301070},
  booktitle={2020 International Symposium on Electronics and Telecommunications (ISETC)},
  chapter={0}
}

